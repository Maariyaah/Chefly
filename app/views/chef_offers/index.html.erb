<div class="row justify-content-center">
  <div class="col-sm-8 my-3 lg-4">
    <%= form_with url: chef_offers_path, method: :get, class: "d-flex m-4" do %>
      <%= text_field_tag :query,
            params[:query],
            class: "form-control",
            placeholder: "search by chef or cuisine..."
        %>
      <%= submit_tag "Search", name: "", class: "btn btn-book btn-sm" %>

    <% end %>
  </div>

</div>







<div class="container m-6">
  <div class="row">
    <% @chef_offers.each do |offer| %>
      <div class="col-md-6 mb-4">
        <div class="card m-4 bg-white border-0">
          <div class="row">
              <div class="col-4 mb-0" style="border-radius: 2px; background-image:url('<%= cl_image_path offer.photo.key %>');background-size: cover; background-position: center;">
            </div>

            <div class="col-7">
              <div class="card-body m-3 border-0 rounded">
                <div class="card-text text-justify">

                  <p class="mb-2" style="font-size:26px;"> <strong><%= offer.name%></strong> </p>
                  <p class="mb-2"><strong>Location:</strong> <%= offer.location %></p>
                  <p class="mb-2"><strong>Cuisine Specialty:</strong> <%= offer.cuisine_category %></p>
                  <p class="mb-2"><strong>Dish Specialty:</strong> <%= offer.dish_specialty %></p>
                </div>

                <div>
                  <p><strong>Rating:</strong> <%= offer.rating %> ‚≠ê</p>
                  <p class = "mb-4"><a href="<%= chef_offer_path(offer) %>" class="btn btn-book2 p-3"> <%= offer.name %></a></p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

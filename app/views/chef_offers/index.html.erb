<h4>Meet our Chefs</h4>

<% @chef_offers.each do |offer| %>




<div class="card mt-5" style="width: 18rem;">
<%= cl_image_tag offer.photo.key, height: 150, width: 150, class: "mt-3"%>
  <div class="card-body">
    <h5 class="card-title"><%= offer.name %></h5>
    <p><%= offer.cuisine_category %></p>
    <p><%= offer.dish_specialty %></p>
    <p><%= offer.previous_work_experience %></p>
    <p><%= offer.rating%></p>
    <p><%= offer.location %></p>
    <p><%= offer.price_per_hour%></p>
    <a href="#" class="btn btn-primary">Go somewhere</a>
  </div>
</div>
<% end %>

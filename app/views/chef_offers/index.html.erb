

<div class="justify-content-center d-flex align-items-center" style="margin-top:20px;">
<div class="input-group " style="width:60%">
  <input data-target="words" type="search" class="form-control rounded" placeholder="Search for your next Chef..." aria-label="Search" aria-describedby="search-addon"/>
  <button type="button" class="btn btn-book">search</button>
</div>
</div>

<div class="container m-5">
  <div class="row p-6 lg-6">
    <% @chef_offers.each do |offer| %>
      <div class="col-md-6 mb-4">
        <div class="card m-4" style="background-color: #f4f4f4; height: 220px; overflow: hidden; border-radius:20px; flex-wrap: no-wrap;">
          <div class="row" style="flex-wrap: no-wrap;">
            <div class="col-4 mb-0">
              <div class="image-container" style="border-radius: 2px; margin-top:0">
                <%= cl_image_tag offer.photo.key, style: "width: 100%; object-fit: cover; filter: grayscale(30%), height:100%" %>
              </div>
            </div>

            <div class="col-7">
              <div class="card-body m-3 border-0 rounded" style="border-radius: 90px;">
                <div class="card-text text-justify">
                  <p class="mb-2"><strong>Cuisine Specialty:</strong> <%= offer.cuisine_category %></p>
                  <p class="mb-2"><strong>Dish Specialty:</strong> <%= offer.dish_specialty %></p>
                </div>

                <div>
                  <p><strong>Rating:</strong> <%= offer.rating %> ‚≠ê</p>
                  <p style="margin-bottom: 20px;"><a href="<%= chef_offer_path(offer) %>" class="btn btn-book2 p-3"> <%= offer.name %></a></p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div class="class buttoncenter text-center">
  <p style="margin-bottom: 20px;"><a href="<%= root_path%>" class="btn btn-book align-center">
  <i class="fa-solid fa-house"></i>
  </a></p>
</div>
